
<div class="slider-area">
  <div
    class="single-slider section-overly slider-height2 d-flex align-items-center"
    data-background="assets/img/hero/about.jpg"
  >
    <div class="container">
      <div class="row">
        <div class="col-xl-12">
          <div class="hero-cap text-center">
            <h2>Get your job</h2>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="text-center bg-light ">{{count}} job results</div>
<div class="job-listing-area pt-120 pb-120">
  <div class="container">
    <div class="row">
      <div class="col-xl-12 col-lg-12 col-md-12">
       
        <section class="featured-job-area">
          <div class="container">
           
            {{#each jobs}}
              <div class="single-job-items mb-30">
                <div class="job-items">
                  <div class="company-img">
                    <a href="/jobdetails/{{this._id}}"><img
                        src="../../jobImage/{{this._id}}.jpg"
                        alt="company-logo"
                        style="width: 100px;height: 100px;"
                      /></a>
                  </div>
                  <div class="job-tittle">
                    <a href="/jobdetails/{{this._id}}"><h4
                      >{{this.jobtitle}}</h4></a>
                    <ul>
                      <li><i class="fas fa-globe"></i>{{this.compname}}</li>
                      <li><i
                          class="fas fa-map-marker-alt"
                        ></i>{{this.companylocation}}</li>
                    </ul>
                    <ul class="mt-1">
                      <li><i class="fas fa-language"></i>{{this.language}}</li>
                      <li><i class="fas fa-clock"></i>{{this.timeSchedule}}</li>
                    </ul>
                  </div>
                </div>
                <div class="items-link f-right">
                  <a href="/jobdetails/{{this._id}}">View Details</a>
                  <span>Created On: {{this.createdAt}}</span>
                </div>
              </div>
            {{/each}}
          </div>
        </section>
       </div>
    </div>
  </div>
</div>
