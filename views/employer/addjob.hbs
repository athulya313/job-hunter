<div class="row">
    <div class="col-lg-12">
        <div class="section-title text-left ">
            <h3 class="text-secondary m-4">Add Job</a>
                <hr>
        </div>
    </div>

    <div class="container p-4 m-4">
        <div class="">
            <form action="/employer/addjob" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="CompName">Company Name :</label>
                    <input type="text" class="form-control" id="compName" required name="compname">
                </div>
                <div class="form-group">
                    <label for="instLoc"> Location :</label>
                    <input type="text" class="form-control" id="companyLocation" required name="companylocation">
                </div>
                <div class="form-group">
                    <label for="jobTitle">Job Title :</label>
                    <input type="text" class="form-control" id="jobTitle" required name="jobtitle">
                </div>
                <div class="form-group">
                    <label for="TimeSchedule">Time schedule :</label>
                    <div class="form-check ml-2">
                    <input class="form-check-input" type="radio" required name="timeSchedule" id="flexRadioDefault2" checked value="full-time">
                    <label class="form-check-label" for="flexRadioDefault2">
                    Full time
                    </label>
                    </div>
                    <div class="form-check ml-2">
                    <input class="form-check-input" type="radio" required name="timeSchedule" id="flexRadioDefault1" value="part-time">
                    <label class="form-check-label" for="flexRadioDefault1">
                        Part time
                    </label>
                    </div>
                </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6 mb-4">
                        <span>Add Company Logo : </span>
  
                            <div class="file-field">
                                <div class="mb-4">
                                    <img src=""
                                        id="imgView" class="rounded-circle z-depth-1-half avatar-pic mt-3"
                                        alt="example placeholder avatar">
                                </div>
                                <div class="d-flex justify-content-center">
                                    <div class="float-left">
                                        <input type="file" onchange="viewImage(event)" name="Image" required>
                                    </div>
                                </div>
                            </div>
               
                    </div>
                </div>
                <div class="form-group">
                    <label for="skills">Skills :</label>
                    <input type="text" class="form-control" id="skills" required name="skills">
                </div>
                <div class="form-group">
                    <label for="qualifications">Qualifications :</label>
                    <input type="text" class="form-control" id="qualifications" required name="qualifications">
                </div>
                <div class="form-group">
                    <label for="expreq">Experience :</label>
                    <input type="text" class="form-control" id="experience" required name="experience">
                </div>
                <div class="form-group">
                    <label for="language">Languages Needed :</label>
                    <input type="text" class="form-control" id="language" required name="language">
                </div>
                <div class="form-group">
                    <label for="pin">Pin Number :</label>
                    <input type="text" class="form-control" id="pin" required name="pin">
                </div>
                <div class="form-group">
                    <label for="description">Description:</label>
                    <textarea class="form-control" rows="5" required name="description" id="description"></textarea>
                </div>
                <div class="section-tittle text-center">
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </form>


        </div>

    </div>

</div>


<style>
    .avatar-pic {
        width: 100px;
    }

    .nice-select {
        width: 100%;
        margin-bottom: 2rem;
    }
</style>


<script>
    function viewImage(event) {
        document.getElementById('imgView').src = URL.createObjectURL(event.target.files[0])
    }
</script>