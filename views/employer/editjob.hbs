<div class="row">
    <div class="col-lg-12">
        <div class="section-tittle text-left ">
            <h3 class="text-secondary m-4">Edit Job</a>
                <hr>
        </div>
    </div>
   

    <div class="container p-4 m-4">
        <div class="">
            <form action="/employer/editjob/{{jobdetail._id}}" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="compname">Your Institute Name :</label>
                    <input type="text" class="form-control" id="compname" name="compname" value="{{jobdetail.compname}}">
                </div>
                <div class="form-group">
                    <label for="companylocation">Institute Location :</label>
                    <input type="text" class="form-control" id="companylocation" name="companylocation" value="{{jobdetail.companylocation}}">
                </div>
                <div class="form-group">
                    <label for="jobtitle">Job Name :</label>
                    <input type="text" class="form-control" id="jobtitle" name="jobtitle" value="{{jobdetail.jobtitle}}">
                </div>
                <div class="form-group">
                    <label for="jobName">Time schedule :</label>
                    <div class="form-check ml-2">
                    <input class="form-check-input" type="radio" name="timeSchedule" id="flexRadioDefault2" checked value="full-time">
                    <label class="form-check-label" for="flexRadioDefault2">
                    Full time
                    </label>
                    </div>
                    <div class="form-check ml-2">
                    <input class="form-check-input" type="radio" name="timeSchedule" id="flexRadioDefault1" value="part-time">
                    <label class="form-check-label" for="flexRadioDefault1">
                        Part time
                    </label>
                    </div>
                </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6 mb-4">
                        <span>Add Company Logo : </span>
  
                            <div class="file-field">
                                <div class="mb-4">
                                    <img src="../../jobImage/{{jobdetail._id}}.jpg"
                                        id="imgView" class="rounded-circle z-depth-1-half avatar-pic mt-3"
                                        alt="example placeholder avatar">
                                </div>
                                <div class="d-flex justify-content-center">
                                    <div class="float-left">
                                        <input type="file" onchange="viewImage(event)" name="Image">
                                    </div>
                                </div>
                            </div>
               
                    </div>
                </div>
                <div class="form-group">
                    <label for="skills">Skills :</label>
                    <input type="text" class="form-control" id="skills" name="skills" value="{{jobdetail.skills}}">
                </div>
                <div class="form-group">
                    <label for="qualifications">Qualifications :</label>
                    <input type="text" class="form-control" id="qualifications" name="qualifications" value="{{jobdetail.qualifications}}">
                </div>
                <div class="form-group">
                    <label for="experience">Experience Required :</label>
                    <input type="text" class="form-control" id="experience" name="experience" value="{{jobdetail.experience}}">
                </div>
                <div class="form-group">
                    <label for="languages">Language Needed :</label>
                    <input type="text" class="form-control" id="languages" name="languages" value="{{jobdetail.language}}">
                </div>
                <div class="form-group">
                    <label for="pin">Pin Number :</label>
                    <input type="text" class="form-control" id="pin" name="pin" value="{{jobdetail.pin}}">
                </div>
                <div class="form-group">
                    <label for="description">Description:</label>
                    <textarea class="form-control" rows="5" name="description" id="description"  >{{jobdetail.description}}</textarea>
                </div>
                <div class="section-tittle text-center">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>


        </div>

    </div>

</div>


<style>
    .avatar-pic {
        width: 100px;
    }

    .nice-select {
        width: 100%;
        margin-bottom: 2rem;
    }
</style>


<script>
    function viewImage(event) {
        document.getElementById('imgView').src = URL.createObjectURL(event.target.files[0])
    }
</script>