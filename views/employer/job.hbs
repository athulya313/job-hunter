<div class="row">
                    <div class="col-lg-12">
                        <div class="section-title text-right m-4">
                            <a href="/employer/addjob" class="btn btn-primary mr-4">Add job</a>
                        </div>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-xl-10">
                        
                        {{#each jobdetails}}
                        <!-- single-job-content -->
                        <div class="single-job-items mb-30 bg-light shadow-sm rounded">
                            <div class="job-items">
                                <div class="company-img">
                                    <a href=" "><img src="../../jobImage/{{this._id}}.jpg" alt="company-logo" style="width: 100px;height: 100px;"></a>
                                </div>
                                <div class="job-tittle">
                                    <a href=""><h4>{{this.jobtitle}}</h4></a>
                                    <ul>
                                        <li><i class="fas fa-globe"></i>{{this.compname}}</li>
                                        <li><i class="fas fa-map-marker-alt"></i>{{this.companylocation}}</li>
                                    </ul>
                                    <ul class="mt-1">
                                        <li><i class="fas fa-language"></i>{{this.language}}</li>
                                        <li><i class="fas fa-clock"></i>{{this.timeSchedule}}</li>
                                    </ul>
                                </div>
                            </div>
                            <div class="items-link f-right">
                                <a href="/employer/editjob/{{this._id}}" class="bg-warning text-light border border-dark">Edit Job</a>
                                <a href="/employer/deletejob/{{this._id}}" class="bg-danger text-light border border-dark" onclick="return confirm('are you sure?')">Delete Job</a>

                                <span>Created on : {{this.createdAt}}</span>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>

		</div>
	</div>